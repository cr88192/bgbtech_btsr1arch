ifneq (,$(findstring alpha,$(shell uname -m)))
ARCH=axp
else
ARCH=i386
endif
NOARCH=noarch

BUILD_DEBUG_DIR=debug$(ARCH)$(GLIBC)
BUILD_RELEASE_DIR=release$(ARCH)$(GLIBC)

TOOLPATH=

CC=$(TOOLPATH)gcc
OBJDUMP=$(TOOLPATH)objdump

TK_CFL=-Os
TK_LDFL= $(TK_CFL) -lm

# BASE_CFLAGS=-Dstricmp=strcasecmp
