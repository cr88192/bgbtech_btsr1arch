libvxcore.ril: $(SRCS_CLIB) $(SRCS_ASM) 
	$(CC) -o libvxcore.ril vxcore_multi.c $(SRCS_ASM) $(COPTS)

libvxcore64.ril: $(SRCS_CLIB) $(SRCS_ASM)
	$(CC) -o libvxcore64.ril vxcore_multi.c $(SRCS_ASM) $(COPTS64)

libvxcore_bjx2.ril: $(SRCS_CLIB) $(SRCS_ASM)
	$(CC) -o libvxcore_bjx2.ril vxcore_multi.c $(SRCS_ASM) $(COPTS64)

